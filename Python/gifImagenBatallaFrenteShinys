import os
import requests

# Crear la carpeta si no existe
if not os.path.exists('pokemonGifShiny'):
    os.makedirs('pokemonGifShiny')

# URL base para los sprites animados shiny
base_url = 'https://raw.githubusercontent.com/PokeAPI/sprites/master/sprites/pokemon/versions/generation-v/black-white/animated/shiny/'

# Descargar los sprites de los primeros 151 Pok√©mon
for i in range(1, 650):
    response = requests.get(base_url + str(i) + '.gif')
    
    # Guardar el sprite en un archivo
    with open('pokemonGifShiny/' + str(i) + '.gif', 'wb') as f:
        f.write(response.content)
